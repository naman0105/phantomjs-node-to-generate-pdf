			<tr>
				<td class="tableStyleNoLeft tablecell" align="center">
					<strong>Top Scoring Lessions</strong><br><br>
				  	<%for(var i=0; i<goodLessions.length; i++){%>					
						<div class="spaceBetweenText"><%=goodLessions[i].title%></div><br>
					<%}%>
				</td>
